      "NotNullable": false
    },
    {
      "FieldName": "StartDate",
      "DataType": "date",
      "NotNullable": true
    },
    {
      "FieldName": "EndDate",
      "DataType": "date",
      "NotNullable": false
    },
    {
      "FieldName": "StartTime",
      "DataType": "varchar(5)",
      "NotNullable": true
    },
    {
      "FieldName": "EndTime",
      "DataType": "varchar(5)",
      "NotNullable": true
    },
    {
      "FieldName": "IsActive",
      "DataType": "tinyint(1)",
