{
  "TableName": "Projects",
  "PrimaryKeyFields": "Id",
  "Fields": [
    {
      "FieldName": "Id",
      "DataType": "int",
      "NotNullable": true,
      "AutoIncrement": true,
      "Comment": "Primary key - unique project identifier"
    },
    {
      "FieldName": "ProjectName",
      "DataType": "varchar(255)",
      "NotNullable": true,
      "Comment": "Name of the project"
    },
    {
      "FieldName": "OrganizationId",
      "DataType": "int",
      "NotNullable": true,
      "Comment": "Foreign key - reference to Organizations.Id"
    },
    {
      "FieldName": "Description",
      "DataType": "text",
      "NotNullable": false,
      "Comment": "Detailed project description"
    },
    {
      "FieldName": "CreatedBy",
      "DataType": "int",
      "NotNullable": true,
      "Comment": "Foreign key - reference to Users.Id who created this project"
    },
    {
      "FieldName": "Status",
      "DataType": "int",
      "NotNullable": false,
      "Comment": "Foreign key - reference to ProjectStatusValues.Id"
    },
    {
      "FieldName": "StartDate",
      "DataType": "date",
      "NotNullable": false,
      "Comment": "Project start date"
    },
    {
      "FieldName": "EndDate",
      "DataType": "date",
      "NotNullable": false,
      "Comment": "Project end date or deadline"
    },
    {
      "FieldName": "IsHobby",
      "DataType": "tinyint(1)",
      "NotNullable": true,
      "DefaultValue": "0",
      "Comment": "Whether this is a personal/hobby project"
    },
    {
      "FieldName": "CustomerId",
      "DataType": "int",
      "NotNullable": false,
      "Comment": "Foreign key - reference to Customers.Id if associated with a customer"
    },
    {
      "FieldName": "IsVisibleToCustomer",
      "DataType": "tinyint(1)",
      "NotNullable": true,
      "DefaultValue": "0",
      "Comment": "Whether this project is visible to the associated customer in their portal"
    },
    {
      "FieldName": "JiraBoardId",
      "DataType": "varchar(100)",
      "NotNullable": false,
      "Comment": "Jira board ID for integration"
    },
    {
      "FieldName": "GitHubOwner",
      "DataType": "varchar(100)",
      "NotNullable": false,
      "Comment": "GitHub repository owner/organization name"
    },
    {
      "FieldName": "GitHubRepo",
      "DataType": "varchar(100)",
      "NotNullable": false,
      "Comment": "GitHub repository name"
    },
    {
      "FieldName": "GiteaOwner",
      "DataType": "varchar(100)",
      "NotNullable": false,
      "Comment": "Gitea repository owner/organization name"
    },
    {
      "FieldName": "GiteaRepo",
      "DataType": "varchar(100)",
      "NotNullable": false,
      "Comment": "Gitea repository name"
    },
    {
      "FieldName": "Budget",
      "DataType": "decimal(15,2)",
      "NotNullable": false,
      "DefaultValue": null,
      "Comment": "Project budget in currency units"
    },
    {
      "FieldName": "CreatedAt",
      "DataType": "timestamp",
      "NotNullable": true,
      "DefaultValue": "CURRENT_TIMESTAMP",
      "Comment": "Date and time when the project was created"
    },
    {
      "FieldName": "UpdatedAt",
      "DataType": "timestamp",
      "NotNullable": true,
      "DefaultValue": "CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP",
      "Comment": "Auto-updated timestamp of last modification"
    }
  ],
  "Relationships": [
    {
      "Name": "ProjectOrganization",
      "Description": "Project belongs to an Organization",
      "FromField": "OrganizationId",
      "ToTable": "Organizations",
      "ToField": "Id",
      "Type": "ManyToOne"
    },
    {
      "Name": "ProjectAssignee",
      "Description": "Project is assigned to a User",
      "FromField": "AssignedTo",
      "ToTable": "Users",
      "ToField": "Id",
      "Type": "ManyToOne"
    },
    {
      "Name": "ProjectTasks",
      "Description": "Project has many Tasks",
      "FromField": "Id",
      "ToTable": "Tasks",
      "ToField": "ProjectId",
      "Type": "OneToMany"
    },
    {
      "Name": "ProjectCallRecords",
      "Description": "Project has many Call Records",
      "FromField": "Id",
      "ToTable": "CallRecords",
      "ToField": "ProjectId",
      "Type": "OneToMany"
    }
  ]
}
