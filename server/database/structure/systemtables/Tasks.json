{
  "TableName": "Tasks",
  "PrimaryKeyFields": "Id",
  "Fields": [
    {
      "FieldName": "Id",
      "DataType": "int",
      "NotNullable": true,
      "AutoIncrement": true,
      "Comment": "Primary key - unique task identifier"
    },
    {
      "FieldName": "ProjectId",
      "DataType": "int",
      "NotNullable": true,
      "Comment": "Foreign key - reference to Projects.Id"
    },
    {
      "FieldName": "TaskName",
      "DataType": "varchar(255)",
      "NotNullable": true,
      "Comment": "Name or title of the task"
    },
    {
      "FieldName": "Description",
      "DataType": "mediumtext",
      "NotNullable": false,
      "Comment": "Detailed task description with rich text content"
    },
    {
      "FieldName": "Status",
      "DataType": "int",
      "NotNullable": false,
      "Comment": "Foreign key - reference to TaskStatusValues.Id"
    },
    {
      "FieldName": "Priority",
      "DataType": "int",
      "NotNullable": false,
      "Comment": "Foreign key - reference to TaskPriorityValues.Id"
    },
    {
      "FieldName": "AssignedTo",
      "DataType": "int",
      "NotNullable": false,
      "Comment": "Foreign key - reference to Users.Id for task assignee"
    },
    {
      "FieldName": "DueDate",
      "DataType": "date",
      "NotNullable": false,
      "Comment": "Task deadline or due date"
    },
    {
      "FieldName": "EstimatedHours",
      "DataType": "decimal(10,2)",
      "NotNullable": false,
      "Comment": "Estimated work hours needed for the task"
    },
    {
      "FieldName": "ParentTaskId",
      "DataType": "int",
      "NotNullable": false,
      "Comment": "Foreign key - reference to Tasks.Id for parent task in hierarchy"
    },
    {
      "FieldName": "DisplayOrder",
      "DataType": "int",
      "NotNullable": true,
      "DefaultValue": "0",
      "Comment": "Sort order for displaying tasks"
    },
    {
      "FieldName": "PlannedStartDate",
      "DataType": "date",
      "NotNullable": false,
      "Comment": "Planned start date based on resource allocation"
    },
    {
      "FieldName": "PlannedEndDate",
      "DataType": "date",
      "NotNullable": false,
      "Comment": "Planned end date based on resource allocation"
    },
    {
      "FieldName": "CreatedBy",
      "DataType": "int",
      "NotNullable": true,
      "Comment": "Foreign key - reference to Users.Id who created this task"
    },
    {
      "FieldName": "DependsOnTaskId",
      "DataType": "int",
      "NotNullable": false,
      "Comment": "Foreign key - reference to Tasks.Id for task dependency"
    },
    {
      "FieldName": "TicketId",
      "DataType": "int",
      "NotNullable": false,
      "Comment": "Foreign key - reference to Tickets.Id if created from a ticket"
    },
    {
      "FieldName": "ExternalIssueId",
      "DataType": "varchar(100)",
      "NotNullable": false,
      "Comment": "External issue tracking system identifier (e.g., Jira key)"
    },
    {
      "FieldName": "GitHubIssueNumber",
      "DataType": "int",
      "NotNullable": false,
      "Comment": "GitHub issue number for integration"
    },
    {
      "FieldName": "GiteaIssueNumber",
      "DataType": "int",
      "NotNullable": false,
      "Comment": "Gitea issue number for integration"
    },
    {
      "FieldName": "ExternalUrl",
      "DataType": "varchar(500)",
      "NotNullable": false,
      "Comment": "URL to external issue or task in other systems"
    },
    {
      "FieldName": "CreatedAt",
      "DataType": "timestamp",
      "NotNullable": true,
      "DefaultValue": "CURRENT_TIMESTAMP",
      "Comment": "Date and time when the task was created"
    },
    {
      "FieldName": "UpdatedAt",
      "DataType": "timestamp",
      "NotNullable": true,
      "DefaultValue": "CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP",
      "Comment": "Auto-updated timestamp of last modification"
    }
  ],
  "Relationships": [
    {
      "Name": "TaskProject",
      "Description": "Task belongs to a Project",
      "FromField": "ProjectId",
      "ToTable": "Projects",
      "ToField": "Id",
      "Type": "ManyToOne"
    },
    {
      "Name": "TaskStatus",
      "Description": "Task has a Status",
      "FromField": "Status",
      "ToTable": "TaskStatusValues",
      "ToField": "Id",
      "Type": "ManyToOne"
    },
    {
      "Name": "TaskPriority",
      "Description": "Task has a Priority Level",
      "FromField": "Priority",
      "ToTable": "TaskPriorityValues",
      "ToField": "Id",
      "Type": "ManyToOne"
    },
    {
      "Name": "TaskAssignee",
      "Description": "Task is assigned to a User",
      "FromField": "AssignedTo",
      "ToTable": "Users",
      "ToField": "Id",
      "Type": "ManyToOne"
    },
    {
      "Name": "ParentTask",
      "Description": "Task can have a Parent Task",
      "FromField": "ParentTaskId",
      "ToTable": "Tasks",
      "ToField": "Id",
      "Type": "ManyToOne"
    },
    {
      "Name": "DependentTask",
      "Description": "Task can depend on another Task",
      "FromField": "DependsOnTaskId",
      "ToTable": "Tasks",
      "ToField": "Id",
      "Type": "ManyToOne"
    },
    {
      "Name": "TaskTicket",
      "Description": "Task can be linked to a Ticket",
      "FromField": "TicketId",
      "ToTable": "Tickets",
      "ToField": "Id",
      "Type": "ManyToOne"
    }
  ]
}
