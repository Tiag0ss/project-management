{
  "TableName": "CallRecords",
  "Fields": [
    {
      "FieldName": "Id",
      "DataType": "int",
      "NotNullable": true,
      "AutoIncrement": true,
      "Comment": "Primary key - unique call record identifier"
    },
    {
      "FieldName": "UserId",
      "DataType": "int",
      "NotNullable": true,
      "Comment": "Foreign key - reference to Users.Id who logged this call"
    },
    {
      "FieldName": "CallDate",
      "DataType": "date",
      "NotNullable": true,
      "Comment": "Date when call occurred"
    },
    {
      "FieldName": "StartTime",
      "DataType": "time",
      "NotNullable": true,
      "Comment": "Time when call started"
    },
    {
      "FieldName": "DurationMinutes",
      "DataType": "int",
      "NotNullable": true,
      "DefaultValue": "0",
      "Comment": "Duration of call in minutes"
    },
    {
      "FieldName": "CallType",
      "DataType": "varchar(50)",
      "NotNullable": true,
      "DefaultValue": "Teams",
      "Comment": "Type of call (Teams, Phone, Zoom, etc.)"
    },
    {
      "FieldName": "Participants",
      "DataType": "text",
      "NotNullable": false,
      "Comment": "List of call participants"
    },
    {
      "FieldName": "Subject",
      "DataType": "varchar(255)",
      "NotNullable": false,
      "Comment": "Subject or topic of the call"
    },
    {
      "FieldName": "Notes",
      "DataType": "text",
      "NotNullable": false,
      "Comment": "Notes or summary from the call"
    },
    {
      "FieldName": "ProjectId",
      "DataType": "int",
      "NotNullable": false,
      "Comment": "Foreign key - reference to Projects.Id if related to a project"
    },
    {
      "FieldName": "TaskId",
      "DataType": "int",
      "NotNullable": false,
      "Comment": "Foreign key - reference to Tasks.Id if related to a task"
    },
    {
      "FieldName": "CreatedAt",
      "DataType": "timestamp",
      "NotNullable": true,
      "DefaultValue": "CURRENT_TIMESTAMP",
      "Comment": "Date and time when call record was created"
    }
  ],
  "PrimaryKeyFields": "Id",
  "ForeignKeys": [
    {
      "Field": "UserId",
      "References": "Users(Id)"
    }
  ],
  "Relationships": [
    {
      "Name": "CallRecordUser",
      "Description": "Call Record belongs to a User",
      "FromField": "UserId",
      "ToTable": "Users",
      "ToField": "Id",
      "Type": "ManyToOne"
    },
    {
      "Name": "CallRecordProject",
      "Description": "Call Record is related to a Project",
      "FromField": "ProjectId",
      "ToTable": "Projects",
      "ToField": "Id",
      "Type": "ManyToOne"
    }
  ]
}
