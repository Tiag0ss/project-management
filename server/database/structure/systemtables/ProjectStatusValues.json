{
  "TableName": "ProjectStatusValues",
  "PrimaryKeyFields": "Id",
  "Fields": [
    {
      "FieldName": "Id",
      "DataType": "int",
      "NotNullable": true,
      "AutoIncrement": true,
      "Comment": "Primary key - unique status value identifier"
    },
    {
      "FieldName": "OrganizationId",
      "DataType": "int",
      "NotNullable": true,
      "Comment": "Foreign key - reference to Organizations.Id for organization-specific statuses"
    },
    {
      "FieldName": "StatusName",
      "DataType": "varchar(100)",
      "NotNullable": true,
      "Comment": "Display name of the project status"
    },
    {
      "FieldName": "ColorCode",
      "DataType": "varchar(7)",
      "NotNullable": false,
      "Comment": "Color code in hex format (e.g., #FF5733) for UI display"
    },
    {
      "FieldName": "SortOrder",
      "DataType": "int",
      "NotNullable": true,
      "DefaultValue": "0",
      "Comment": "Order for displaying status values in lists"
    },
    {
      "FieldName": "IsDefault",
      "DataType": "tinyint(1)",
      "NotNullable": true,
      "DefaultValue": "0",
      "Comment": "Whether this is the default status for new projects"
    },
    {
      "FieldName": "IsClosed",
      "DataType": "tinyint(1)",
      "NotNullable": true,
      "DefaultValue": "0",
      "Comment": "Whether this status indicates project is closed/completed"
    },
    {
      "FieldName": "IsCancelled",
      "DataType": "tinyint(1)",
      "NotNullable": true,
      "DefaultValue": "0",
      "Comment": "Whether this status indicates project was cancelled"
    },
    {
      "FieldName": "CreatedAt",
      "DataType": "timestamp",
      "NotNullable": true,
      "DefaultValue": "CURRENT_TIMESTAMP",
      "Comment": "Date and time when status value was created"
    }
  ]
}
