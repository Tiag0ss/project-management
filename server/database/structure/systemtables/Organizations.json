{
  "TableName": "Organizations",
  "PrimaryKeyFields": "Id",
  "Fields": [
    {
      "FieldName": "Id",
      "DataType": "int",
      "NotNullable": true,
      "AutoIncrement": true,
      "Comment": "Primary key - unique organization identifier"
    },
    {
      "FieldName": "Name",
      "DataType": "varchar(255)",
      "NotNullable": true,
      "Comment": "Organization name"
    },
    {
      "FieldName": "Abbreviation",
      "DataType": "varchar(10)",
      "NotNullable": false,
      "Comment": "Short abbreviation or acronym for the organization"
    },
    {
      "FieldName": "Description",
      "DataType": "text",
      "NotNullable": false,
      "Comment": "Detailed description of the organization"
    },
    {
      "FieldName": "CreatedBy",
      "DataType": "int",
      "NotNullable": true,
      "Comment": "Foreign key - reference to Users.Id who created this organization"
    },
    {
      "FieldName": "CreatedAt",
      "DataType": "timestamp",
      "NotNullable": true,
      "DefaultValue": "CURRENT_TIMESTAMP",
      "Comment": "Date and time when the organization was created"
    },
    {
      "FieldName": "UpdatedAt",
      "DataType": "timestamp",
      "NotNullable": true,
      "DefaultValue": "CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP",
      "Comment": "Auto-updated timestamp of last modification"
    }
  ],
  "Relationships": [
    {
      "Name": "OrganizationCreator",
      "Description": "Organization was created by a User",
      "FromField": "CreatedBy",
      "ToTable": "Users",
      "ToField": "Id",
      "Type": "ManyToOne"
    },
    {
      "Name": "OrganizationProjects",
      "Description": "Organization has many Projects",
      "FromField": "Id",
      "ToTable": "Projects",
      "ToField": "OrganizationId",
      "Type": "OneToMany"
    },
    {
      "Name": "OrganizationMembers",
      "Description": "Organization has many Organization Members",
      "FromField": "Id",
      "ToTable": "OrganizationMembers",
      "ToField": "OrganizationId",
      "Type": "OneToMany"
    },
    {
      "Name": "OrganizationTickets",
      "Description": "Organization has many Tickets",
      "FromField": "Id",
      "ToTable": "Tickets",
      "ToField": "OrganizationId",
      "Type": "OneToMany"
    }
  ]
}
