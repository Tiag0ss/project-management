{
  "TableName": "SystemSettings",
  "PrimaryKeyFields": "SettingKey",
  "Fields": [
    {
      "FieldName": "SettingKey",
      "DataType": "varchar(100)",
      "NotNullable": true,
      "Comment": "Primary key - unique setting identifier (e.g., 'smtp_host', 'app_name')"
    },
    {
      "FieldName": "SettingValue",
      "DataType": "text",
      "NotNullable": false,
      "Comment": "Setting value (can be JSON for complex configurations)"
    },
    {
      "FieldName": "UpdatedAt",
      "DataType": "timestamp",
      "NotNullable": true,
      "DefaultValue": "CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP",
      "Comment": "Date and time when setting was last modified"
    }
  ]
}
