{
  "TableName": "UserEmailPreferences",
  "PrimaryKeyFields": "Id",
  "Fields": [
    {
      "FieldName": "Id",
      "DataType": "int",
      "NotNullable": true,
      "AutoIncrement": true,
      "Comment": "Primary key - unique preference entry identifier"
    },
    {
      "FieldName": "UserId",
      "DataType": "int",
      "NotNullable": true,
      "Comment": "Foreign key - reference to Users.Id"
    },
    {
      "FieldName": "NotificationType",
      "DataType": "varchar(50)",
      "NotNullable": true,
      "Comment": "Type of notification (e.g., 'task_assigned', 'ticket_updated', 'mention')"
    },
    {
      "FieldName": "EmailEnabled",
      "DataType": "tinyint(1)",
      "NotNullable": true,
      "DefaultValue": "1",
      "Comment": "Flag indicating if email notifications are enabled for this type"
    },
    {
      "FieldName": "CreatedAt",
      "DataType": "timestamp",
      "NotNullable": true,
      "DefaultValue": "CURRENT_TIMESTAMP",
      "Comment": "Date and time when preference was created"
    },
    {
      "FieldName": "UpdatedAt",
      "DataType": "timestamp",
      "NotNullable": true,
      "DefaultValue": "CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP",
      "Comment": "Date and time when preference was last updated"
    }
  ]
}
