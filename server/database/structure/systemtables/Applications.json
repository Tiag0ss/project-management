{
  "TableName": "Applications",
  "PrimaryKeyFields": "Id",
  "Fields": [
    {
      "FieldName": "Id",
      "DataType": "int",
      "NotNullable": true,
      "AutoIncrement": true,
      "Comment": "Primary key - unique application identifier"
    },
    {
      "FieldName": "Name",
      "DataType": "varchar(255)",
      "NotNullable": true,
      "Comment": "Name of the application"
    },
    {
      "FieldName": "Description",
      "DataType": "text",
      "NotNullable": false,
      "Comment": "Detailed description of the application"
    },
    {
      "FieldName": "RepositoryUrl",
      "DataType": "varchar(500)",
      "NotNullable": false,
      "Comment": "URL of the source code repository"
    },
    {
      "FieldName": "OrganizationId",
      "DataType": "int",
      "NotNullable": true,
      "Comment": "Foreign key - reference to Organizations.Id that owns this application"
    },
    {
      "FieldName": "IsActive",
      "DataType": "tinyint(1)",
      "NotNullable": true,
      "DefaultValue": "1",
      "Comment": "Whether the application is active"
    },
    {
      "FieldName": "CreatedBy",
      "DataType": "int",
      "NotNullable": true,
      "Comment": "Foreign key - reference to Users.Id who created this application"
    },
    {
      "FieldName": "CreatedAt",
      "DataType": "timestamp",
      "NotNullable": true,
      "DefaultValue": "CURRENT_TIMESTAMP",
      "Comment": "Date and time when the application was created"
    },
    {
      "FieldName": "UpdatedAt",
      "DataType": "timestamp",
      "NotNullable": true,
      "DefaultValue": "CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP",
      "Comment": "Auto-updated timestamp of last modification"
    }
  ]
}
